{
  "name": "express-enhanced-logger",
  "version": "2.3.0",
  "description": "An enhanced Express.js logger with performance monitoring, SQL query formatting, and customizable features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.js\" \"*.md\" \"*.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.js\" \"*.md\" \"*.json\"",
    "type-check": "tsc --noEmit",
    "semantic-release": "semantic-release",
    "semantic-release:dry-run": "semantic-release --dry-run",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preversion": "npm run type-check && npm run lint && npm run build && npm test"
  },
  "keywords": [
    "express",
    "logger",
    "winston",
    "sql",
    "prisma",
    "performance",
    "middleware"
  ],
  "author": "Dylan Dietz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deetss/express-enhanced-logger.git"
  },
  "bugs": {
    "url": "https://github.com/Deetss/express-enhanced-logger/issues"
  },
  "homepage": "https://github.com/Deetss/express-enhanced-logger#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "express": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^9.17.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "semantic-release": "^25.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.5.4"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests",
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.js",
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(chalk)/)"
    ]
  }
}
